<h1>Posts</h1>

<% @posts.each do |post| %>
  <div class="post">
    <p><strong>Category:</strong> <%= post.category.name %></p>
    <p><strong>Posted by:</strong> <%= post.user.username %></p>
    <h2><%= link_to post.title, post_path(post) %></h2>
    <p><%= post.content %></p>
  </div>
<% end %>
